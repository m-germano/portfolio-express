<section
  class="w-full h-[85vh] bg-[#0f0f0f] text-white flex flex-col items-center justify-center px-8 relative"
>
  <div
    class="flex flex-col md:flex-row items-center justify-between max-w-6xl w-full"
  >
    <!-- Text Section -->
    <div class="md:w-1/2 space-y-4">
      <p class="text-sm tracking-widest text-gray-400">Software Developer</p>

      <!-- Efeito de digitação -->
      <h1 class="text-4xl sm:text-5xl font-bold leading-tight">
        <span id="hello" class="text-white"></span><br />
        <span id="name" class="text-purple-500"></span>
      </h1>

      <p class="text-gray-400">"Simplicity is the soul of efficiency."</p>
      <p class="text-gray-500">– Austin Freeman</p>

      <!-- Botões -->
      <div class="mt-6 flex items-center space-x-4">
        <a
          href="/documents/Curriculo.pdf"
          download="MatheusGermano_CV.pdf"
          class="px-4 py-2 border border-purple-500 text-purple-500 rounded hover:bg-purple-500 hover:text-black transition"
        >
          Download CV
        </a>
        <a
          href="https://github.com/m-germano"
          target="_blank"
          class="text-purple-500 hover:text-white text-2xl"
        >
          <i class="fab fa-github"></i>
        </a>
        <a
          href="https://www.linkedin.com/in/math-germano/"
          target="_blank"
          class="text-purple-500 hover:text-white text-2xl"
        >
          <i class="fab fa-linkedin"></i>
        </a>
      </div>
    </div>

    <!-- Imagem com menos zoom -->
    <div class="md:w-1/2 flex justify-center mt-10 md:mt-0">
      <div
        class="relative w-96 h-96 rounded-full border-4 border-purple-500 overflow-hidden shadow-lg bg-black"
      >
        <div
          class="absolute inset-0 bg-black opacity-30 rounded-full z-10"
        ></div>
        <img
          src="/images/profilepic.png"
          alt="Matheus Germano"
          class="w-full h-full object-contain rounded-full z-0"
        />
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const helloText = "Hello I'm";
      const nameText = "Matheus Germano";

      const helloSpan = document.getElementById("hello");
      const nameSpan = document.getElementById("name");

      let i = 0;

      function typeHello() {
        if (i < helloText.length) {
          helloSpan.textContent += helloText.charAt(i);
          i++;
          setTimeout(typeHello, 80);
        } else {
          i = 0;
          setTimeout(typeName, 300); // pequena pausa antes do nome
        }
      }

      function typeName() {
        if (i < nameText.length) {
          nameSpan.textContent += nameText.charAt(i);
          i++;
          setTimeout(typeName, 80);
        }
      }

      typeHello();
    });
  </script>
</section>
